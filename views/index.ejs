<!DOCTYPE html>
<html>
  <head>
    <title>nodechat</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/dist/css/bootstrap.min.css" rel="stylesheet" media="screen">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="/assets/js/html5shiv.js"></script>
      <script src="/assets/js/respond.min.js"></script>
    <![endif]-->
  </head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<script src="/javascripts/jquery-1.10.2.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/javascripts/nodechat.js"></script>
  </head>
  <body>
  	<div class="container">

      <form id="login" class="form-signin">
        <h2 class="form-signin-heading">Entre no chat</h2>
        <input type="text" class="form-control" placeholder="E-mail" id="email" autofocus>
        <input type="text" class="form-control second" placeholder="Sala" id="sala">
		<div id="mensagem-login" class="alert alert-warning hide"></div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      </form>

	    <div id="chat" class="hide">
		    <div class="panel panel-default">
				<div class="panel-heading">
				    <h3 class="panel-title">Chat</h3>
				</div>
			  	<div id="mensagens" class="panel-body">
			  	</div>
			</div>
			<form id="send">
				<input type="text" class="form-control" placeholder="Mensagem..." id="mensagem" autofocus>
				<button class="btn" id="enviar" type="submit">Enviar</button>
			</form>
		</div>
    </div> 
 </body>
</html>
