        <input type="text" class="form-control second" placeholder="Sala" id="sala">
		<div id="mensagem-login" class="alert alert-warning hide"></div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      </form>

	    <div id="chat" class="hide">
		    <div class="panel panel-default">
				<div class="panel-heading">
				    <h3 class="panel-title">Chat</h3>
				</div>
			  	<div id="mensagens" class="panel-body">
			  	</div>
			</div>
			<form id="send">
				<input type="text" class="form-control" placeholder="Mensagem..." id="mensagem" autofocus>
				<button class="btn" id="enviar" type="submit">Enviar</button>
			</form>
		</div>
